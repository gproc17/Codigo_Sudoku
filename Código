void imprimir_matriz_9x9solotablero(int matriz[9][9]){
    char x=0;
    cout << "Ingresar un borde: " << endl;
    cin >> x;
    for (int i=0; i<19; i++){
        cout << x;
    }
    cout << endl;
    for (int i=0; i<9;++i){
        for(int j=0;j<9; ++j){

            if (j==2||j==5||j==8)
                cout  << ' ' << x;
            else if (j==0)
                cout  << x <<' ' <<"|";
            else
                cout  << ' '<< "|";
        }
        cout<<endl;
        if (i==2||i==5||i==8) {
            for (int i=0; i<19; i++) {
                cout << x;
            }
            cout << endl;
        } else{
            cout << x << "-+-+-" << x << "-+-+-" << x<< "-+-+-" << x<<endl;
        }
    }
}


void imprimir_matriz_9x9(int matriz[9][9], const int n, const int m){
    char x=0;
    cout << "Ingresar un borde: " << endl;
    cin >> x;
    for (int i=0; i<19; i++){
        cout << x;
    }
    cout << endl;
    for (int i=0; i<n;++i){
        for(int j=0;j<m; ++j){

            if (j==2||j==5||j==8)
                cout  << matriz[i][j] << x;
            else if (j==0)
                cout  << x <<matriz[i][j] <<"|";
            else
                cout  << matriz[i][j] << "|";
        }
        cout<<endl;
        if (i==2||i==5||i==8) {
            for (int i=0; i<19; i++) {
                cout << x;
            }
            cout << endl;
        } else{
            cout << x << "-+-+-" << x << "-+-+-" << x<< "-+-+-" << x<<endl;
        }
    }
}



bool buscarfilas(int M[9][9]){
    for (int i=0;i<9;i++){
        for (int j=0;j<9;j++){
            for (int k=0;k<9;k++){
                if (j!=k && M[i][j]==M[i][k]) {
                    return false;
                }
                if (i!=k && M[i][j]==M[k][j]) {
                    return false;
                }
            }

        }
    }
}

int cambiarcuadranteamatriz(int M[9][9],int M1[9][9]){
    for (int i=0;i<9;i++){
        for (int j=0;j<9;j++){
            if (i<3&&j<3){  //1
                M1[i][j]=M[i][j];
            }else if (i<3&&j>2&&j<6){    //2
                M1[i][j]=M[i][j];
            }else if (i<3&&j>5&&j<9){   //3*
                M1[i][j]=M[i][j];
            }else if (i>2&&i<6&&j<3){   //4
                M1[i][j]=M[i][j];
            }else if (i>2&&i<6&&j>2&&j<6){   //5
                M1[i][j]=M[i][j];
            }else if (i>2&&i<6&&j>5&&j<9){    //6
                M1[i][j]=M[i][j];
            }else if (i>5&&i<9&&j<3){   //7
                M1[i][j]=M[i][j];
            }else if (i>5&&i<9&&j>2&&j<6){   //8
                M1[i][j]=M[i][j];
            }else if (i>5&&i<9&&j>5&&j<9){    //9
                M1[i][j]=M[i][j];
            }

        }
    }
    return 0;
}

bool buscarcuadrante(int M[9][9],int M1[9][9]){
    cambiarcuadranteamatriz(M,M1);
    buscarfilas(M1);
    return true;
}



int main() {
    char a;
    cout<<"Si quiere imprimir el tablero escriba '0', de lo contrario escriba cualquier nÃºmero"<<endl;
    cin>>a;
    const int n1 = 9;
    const int m1 = 9;
    bool m=true;
    int i=0;
    int M[9][9];
    random_device rand;
    if (a=='0'){
        imprimir_matriz_9x9solotablero(M);
    }else {
        int matriz[n1][m1] = {0};
        for (int i = 0; i < n1; ++i) {
            for (int j = 0; j < m1; ++j) {
                matriz[i][j] = rand() % 9;
            }
        }

        imprimir_matriz_9x9(matriz, n1, m1);
        if (buscarfilas(matriz) == false || buscarcuadrante(matriz, M) == false)
            cout << "No es matriz";
        else
            cout << "Es matriz";
    }

    return 0;
}
